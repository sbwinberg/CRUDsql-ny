generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// One to many relation

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  campaign Campaign[]
}

model Campaign {
  id                 String  @id @default(uuid())
  companyName        String
  companyDescription String
  productDescription String
  targetAudience     String
  createdAt          String
  userId             String
  user               User    @relation(fields: [userId], references: [id])
  emails             Email[]
}

model Email {
  id         String   @id @default(uuid())
  subject    String
  content    String
  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  recipients String[]
}
